{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"noUnusedParameters": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "./dist",
		"declarationMap": true,
		"noUnusedLocals": true,
		"removeComments": false,
		"target": "ES2020",
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"exactOptionalPropertyTypes": true
	},
    "include": ["src/**/*"],
}